<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Music_explorer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/main_background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar_style" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/main_background_color</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="edit_text_style" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_marginStart">@dimen/field_sides_margin</item>
        <item name="android:layout_marginEnd">@dimen/field_sides_margin</item>
        <item name="android:layout_marginTop">@dimen/field_sides_margin</item>
        <item name="android:background">@drawable/bg_input_solid</item>
        <item name="android:drawablePadding">@dimen/field_drawable_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/field_padding_start</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textSize">@dimen/field_text_size</item>
    </style>

    <style name="edit_text_style.password" parent="edit_text_style">
        <item name="android:drawableStart">@drawable/ic_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

</resources>